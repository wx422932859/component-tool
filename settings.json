{
    // 全局安装 eslint 8.6.0
    "editor.formatOnSave": true, // 保存格式化
    "eslint.options": {
        "overrideConfigFile": "./.vscode/.eslintrc.json" // 需要重启 vsCode
    },
    "eslint.validate": ["javascript", "html"],
    "prettier.configPath": "./.vscode/.prettierrc.js", // 格式化规则配置文件
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // 设置查询排除的文件夹
    "search.exclude": {
        "**/build": true,
        "**/dist": true,
        "**/history": true,
        "**/lib": true,
        "**/target": true,
        "**/classes": true
    },
    // 不检查拼写的单词
    "cSpell.words": [
        "Authed",
        "Authen",
        "btns",
        "colspan",
        "CONTEXTPATH",
        "echarts",
        "endregion",
        "filestorage",
        "HHMMSS",
        "laydate",
        "layui",
        "oper",
        "pmrp",
        "reback",
        "rowspan",
        "Thymeleaf",
        "Unasigned"
    ]
}
