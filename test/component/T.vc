<!-- T模块 -->
<template>
    <div class="t">
        <span class="title"></span>
        <ul class="content"></ul>
    </div>
</template>

<script>
    class T extends Component {
        constructor() {
            super();
        }

        // 初始化
        _mounted() {
            console.log('挂载T');
            this.monitor();
        }

        // 监听属性
        monitor() {
            this._observe('title', (value) => {
                this.node.find('.title').text(value);
            });
            this._observe('list', (value) => {
                let htmlStr = '';
                this.node.find('.content').html(value.join(','));
            });
        }

        _listen_component(component, action, data) {
            console.log('App', component, action, data);
        }

        load() {
            try {
                this._send_msg({
                    action: 't',
                    data: 1
                });
            } catch (err) {
                console.log(err);
            }
            this._bus.emit(['App', 'MyCheckbox'], {
                component: this,
                action: 'up',
                data: {}
            });
        }
    }
</script>

<style scoped>
    .t {
        color: red;
    }
</style>
