{
    "editor.formatOnSave": true, // 保存格式化
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // 设置查询排除的文件夹
    "search.exclude": {
        "**/dist": true,
        "**/docs": true,
        "**/node_modules": true
    },
    "cSpell.words": ["colspan", "iconfont", "rowspan"]
}
